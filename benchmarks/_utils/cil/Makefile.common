ROOT=../..

BENCH_SRC   = $(wildcard *.sln)
BENCHMARK   = $(subst .sln,,$(BENCH_SRC))

BUILD=xbuild
BUILD_FLAGS=/p:Configuration=Release

$(BENCHMARK): $(BENCH_SRC)
	$(BUILD) $(BUILD_FLAGS) $(BENCH_SRC)

clean:
	rm -rf src/obj
	rm -rf bin
	rm -rf ../../_utils/cil/Utilities/bin
	rm -rf ../../_utils/cil/Utilities/obj

all: $(BENCHMARK)

.phony: clean all